<%- include('../includes/head.ejs') %>

</head>

<%- include('../includes/navigation.ejs') %>

<body>
    <div class="container text-center">
        <div class="d-flex justify-content-center">
          <div class="row mx-auto">
            <h1 class="mb-4 pb-4"><%=pageTitle %></h1>



    <div class="bg-light container border border-secondary rounded">

        <div class="mt-3 container text-center">
            <div class="row">
              <div class="col">

        <form class="bg-light rounded row gx-3 gy-2 pb-4 mb-4" action="/worthie/register" method="POST">

            <div class="row-sm-1">
                <label class="text-muted" for="email">Email</label>
                <% if (isUserAlreadyInDatabase) { %>    
                  <h5 class="text-danger">Email Already Registered! Enter New Email</h5>
                <% } %>
                <input
                  type="email"
                  minlength="6"
                  class="form-control"
                  name="email"
                  id="email"
                  placeholder="email for new login"
                />
              </div>

              <div class="row-sm-3">
                <label class="text-muted" for="password">Password</label>
                <input
                  type="password"
                  minlength="4"
                  class="form-control"
                  name="password"
                  id="password"
                  placeholder="password for new login"
                />
              </div>
              <div class="row-sm-3">

                <h5 class="text-light">Login</h5>
                <button
                  type="submit"
                  class="btn btn-primary"
                >
                  Register
                </button>

            </div>
            </div>
              </div>
              </form>